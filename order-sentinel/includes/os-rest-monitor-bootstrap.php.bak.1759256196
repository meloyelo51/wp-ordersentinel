<?php
defined('ABSPATH') || exit;

/**
 * Lightweight bootstrap for the REST Monitor UI & hooks
 * (kept tiny so it’s safe to include on every admin request)
 */
require_once __DIR__ . '/class-os-rest-monitor.php';

add_action( 'init', function () {
    // Ensure class exists, then let it register menus/hooks.
    if ( class_exists( 'OS_REST_Monitor' ) ) {
        OS_REST_Monitor::init();
    }
} );
